<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Restaurant Main Page</title>


  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="/styles/main.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
  <!--myCart CSS-->
  <link rel="stylesheet" href="/styles/restaurant.css" type="text/css" />


  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

  <!--JS-->
  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <!--SOCKET.IO-->
  <script src="https://cdn.socket.io/socket.io-3.0.1.min.js"></script>

</head>
<body>
  <%- include('./partials/_nav') %>
  <h1>Restaurant's Main Page</h1>

  <h2 id="bye"></h2>
  <script>

    const socket = io("http://localhost:8080");
    socket.on('connection')
    socket.on("message", (data) => {
      document.querySelector('h2').innerHTML = data;
    })
  </script>




  <main class="restaurant-container">

    <header id="banner">
      <h3>Incoming Orders</h3>
    </header>

    <div id="order-title">
      <div id="order-details-title">ORDER DETAILS</div>
      <div id="est-time-title"><p>ESTIMATED TIME <br> TO COMPLETE</p></div>
    </div>

    <div class="order-list">

      <div class="one-order">
        <div class="order-details">
          <div class="user-details">
            <div>
                <span>Customer ID: </span>
                <p>3</p>
            </div>
            <div>
                <span>Time of Order Placement:</span>
                <p>TIMESTAMP</p>
            </div>
          </div>
          <div class="food-details">
            <span>Food to Prepare:</span>
            <ul>
              <li>1 x Pizza</li>
              <li>1 x Coffee</li>
              <li>3 x Hamburgers</li>
            </ul>
          </div>
          <div class="note-details">
            <span>Customer Notes:</span>
            <p>Please do not include peanuts in my hamburgers. Thank you!</p>
          </div>
        </div>
        <div class="time-container">
          <input type="text" id="estimated-time" name="estimated-time"></input>
          <button type="submit">Submit</button>
        </div>
      </div>

    </div>

    <footer>
      <div>
        <h3>Previous Orders</h3>
      </div>
      <div>
        <p>
          <%- JSON.stringify(carts) %>
        </p>
      </div>
    </footer>




  </main>


</body>
</html>
