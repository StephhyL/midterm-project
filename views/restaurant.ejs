    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.4.0/socket.io.js" integrity="sha512-nYuHvSAhY5lFZ4ixSViOwsEKFvlxHMU2NHts1ILuJgOS6ptUmAGt/0i5czIgMOahKZ6JN84YFDA+mCdky7dD8A==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <script>

      const socket = io("ws://localhost:3000");
      socket.on('connect', () => {
        console.log("restaurant.ejs is connected")
      })
      socket.on("inputValue", (data) => {
        console.log("DATTTA", data)

        const $pData = $("<p>").addClass(".incoming-order-here").text(data);
        const $divOrderDetails = $("<div>").addClass("order-details");
        //appending p with incoming data to a div tag for the "order" side
        $divOrderDetails.append($pData);

        const $input = $("<input>").attr("type", "text").attr("name", "estimated-time").attr("id", "estimated-time");
        const $button = $("<button>").attr("type", "submit").text("Submit");
        const $timeContainer = $("<div>").addClass("time-container");
        //appending to make the textbox for restaurant to input est. time
        $timeContainer.append($input, $button);

        $inputCk = $("<input>").attr("type", "checkbox");
        $divCk = $("<div>").addClass("div-check");
        $divCk.append($inputCk)


        const $divOneOrder = $("<div>").addClass("one-order")
        $divOneOrder.append($divOrderDetails, $timeContainer, $divCk)

        $(".order-list").prepend($divOneOrder)

        // $("#incoming-order-here").text(data);
        // document.querySelector('#incoming-order-here').innerHTML = data;
      })
    </script>


